const EventConvertMap = Object.fromEntries(
  DomEvents.map((key) => {
    return [key.toLowerCase(), key];
  }),
);

// paste => onPaste
export function getReactEventNameFromHandlerName(svelteEventName: string) {
  return EventConvertMap["on" + svelteEventName] || svelteEventName;
}

// onpaste => onPaste
export function getReactEventName(svelteEventName: string) {
  return EventConvertMap[svelteEventName] || svelteEventName;
}
